service cloud.firestore {
  match /databases/{database}/documents {
    // Secure by default 
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }    
    // match /{document=**} {
    //   allow read, write: if request.auth.uid != null;
    // }
    // Users
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }

  }
}